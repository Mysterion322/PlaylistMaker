<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_big</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="iconPadding">6dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="TitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_big</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
    <style name="TextStyle" parent="TitleText">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:paddingLeft">@dimen/indent_normal</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="MainButtonLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">@dimen/indent_normal</item>
        <item name="android:paddingLeft">@dimen/indent_normal</item>
        <item name="android:paddingRight">@dimen/indent_normal</item>
    </style>
    <style name="TextLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/strings_layout_indent</item>
    </style>
    <style name="TitleLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_indent</item>
    </style>
    <style name="SearchLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:paddingLeft">@dimen/indent_normal</item>
        <item name="android:paddingRight">@dimen/indent_normal</item>
    </style>

    <style name="SmallImageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">@dimen/indent_normal</item>
        <item name="tint">?attr/colorOnSecondary</item>
    </style>
    <style name="BackImageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingRight">@dimen/back_image_right_indent</item>
        <item name="android:paddingLeft">@dimen/indent_normal</item>
        <item name="srcCompat">@drawable/back</item>
        <item name="tint">?attr/colorPrimary</item>
    </style>

    <style name="SearchEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/search_layout_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/search_image_layout</item>
        <item name="android:hint">@string/search</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">30</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text"></item>
        <item name="android:textColorHint">?attr/colorPrimaryVariant</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:drawableLeft">@drawable/search_small_image</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:drawableTint">?attr/colorPrimaryVariant</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:drawableRight">@drawable/search_image_layout</item>
    </style>


</resources>