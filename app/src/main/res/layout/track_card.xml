<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        style="@style/TextLayoutStyle"
        android:paddingStart="@dimen/indent_music_card">


        <ImageView
            android:id="@+id/imageView"
            style="@style/MusicCardImage"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/indent_music"
            android:paddingEnd="@dimen/indent_music"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                style="@style/MusicCardText"
                android:text="TextViewWWWWWWWWWWwwwwwwww"
                />

            <TextView
                android:id="@+id/textView5"
                style="@style/MusicCardText"
                android:gravity="top"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="@dimen/text_music"
                android:text="TextView" />
        </LinearLayout>

        <ImageView
            android:id="@+id/image_terms_of_use2"
            style="@style/SmallImageStyle"
            app:srcCompat="@drawable/pointer" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>