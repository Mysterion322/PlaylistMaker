<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchActivity">

    <LinearLayout style="@style/TitleLayoutStyle">

        <ImageView
            android:id="@+id/back_search_image"
            style="@style/BackImageStyle" />

        <TextView
            style="@style/TitleText"
            android:text="@string/search" />

    </LinearLayout>

    <FrameLayout style="@style/SearchLayout">

        <EditText
            android:id="@+id/search_edit_text"
            style="@style/SearchEditTextStyle" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="16dp"></FrameLayout>

<!--    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMusic"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />  -->

    <LinearLayout
        style="@style/TextLayoutStyle"
        android:paddingStart="12dp">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/musicicon2" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/ys_display_regular"
                android:gravity="bottom"
                android:maxLines="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="TextViewWWWWWWWWWWwwwwwwww"
                android:textColor="?attr/colorPrimary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:fontFamily="@font/ys_display_regular"
                android:textColor="?attr/colorPrimaryVariant"
                android:textSize="14sp"
                android:text="TextView" />
        </LinearLayout>

        <ImageView
            android:id="@+id/image_terms_of_use2"
            style="@style/SmallImageStyle"
            app:srcCompat="@drawable/pointer" />


    </LinearLayout>


</LinearLayout>

