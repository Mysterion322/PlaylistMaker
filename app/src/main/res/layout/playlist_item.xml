<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/indent_music"
    card_view:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorOnPrimarySurface"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/playlist_cover"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="4dp"
            android:src="@drawable/placeholder"
            app:layout_constraintDimensionRatio="1:1" />

        <TextView
            android:id="@+id/playlist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            style="@style/MusicCardText"
            android:textSize="@dimen/text_music"
            android:textColor="?attr/colorOnPrimaryFixed"
            tools:text="[Playlist name]" />

        <TextView
            android:id="@+id/playlist_tracks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            style="@style/MusicCardText"
            android:textSize="@dimen/text_music"
            android:textColor="?attr/colorOnPrimaryFixed"
            tools:text="[322 треков]" />

    </LinearLayout>

</androidx.cardview.widget.CardView>